      <font>
         <Font size="18.0"/>
      </font>
      <VBox.margin>
         <Insets/>
      </VBox.margin>
   </TextField>
   <TextField fx:id="tfShowCount" alignment="CENTER">
      <VBox.margin>
         <Insets bottom="20.0"/>
      </VBox.margin>
   </TextField>
   <RadioButton fx:id="rbOne" mnemonicParsing="false" text="RadioButton">
      <font>
         <Font size="14.0"/>
      </font>
      <VBox.margin>
         <Insets/>
      </VBox.margin>
   </RadioButton>
   <RadioButton fx:id="rbTwo" mnemonicParsing="false" text="RadioButton">
      <font>
         <Font size="14.0"/>
      </font>
      <VBox.margin>
         <Insets top="10.0"/>
      </VBox.margin>
   </RadioButton>
   <RadioButton fx:id="rbThree" mnemonicParsing="false" text="RadioButton">
      <font>
         <Font size="14.0"/>
      </font>
      <VBox.margin>
         <Insets top="10.0"/>
      </VBox.margin>
   </RadioButton>
   <RadioButton fx:id="rbFour" mnemonicParsing="false" text="RadioButton">
      <font>
         <Font size="14.0"/>
      </font>
      <VBox.margin>
         <Insets top="10.0"/>
      </VBox.margin>
   </RadioButton>
   <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0">
      <VBox.margin>
         <Insets bottom="20.0" top="20.0"/>
      </VBox.margin>
      <Button mnemonicParsing="false" onAction="#onNextPress" text="Next">
         <HBox.margin>
            <Insets right="10.0"/>
         </HBox.margin>
      </Button>
      <Button mnemonicParsing="false" onAction="#onRestartPress" text="Restart"/>
   </HBox>
</VBox>
